{
  "manifest_version": 2,

  "name": "Hunter's Lazy Login",
  "description": "For lazy employees",
  "version": "1.0",
"content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["content.js"]
  }
],

"background": {
  "scripts": ["background.js"]
},
        "browser_action": {
          "default_icon": "icon.png",
          "default_title": "Lazy Login",      // optional; shown in tooltip
          "default_popup": "popup.html"        // optional
        }
}




